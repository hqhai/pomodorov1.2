{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "Pomodoro Timer with transparent bubble mode",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "keywords": [
    "pomodoro",
    "timer",
    "productivity"
  ],
  "author": "hqhai",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.5",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.hqhai.pomodoro-timer",
    "productName": "Pomodoro Timer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "style.css",
      "script.js",
      "assets/**/*"
    ],
    "win": {
      "target": "dir",
      "signAndEditExecutable": false
    }
  }
}
